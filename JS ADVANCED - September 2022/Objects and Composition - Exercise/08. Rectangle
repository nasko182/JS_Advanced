function rectangle(width,height,color) {

    let Color = ``;
    for (let i = 0; i < color.length; i++) {
        const letter = color[i];
        if(i===0){
           let Letter=color[i].toUpperCase();
           Color+=Letter;
        }
        else{
            Color+=letter;
        }
    }
    
    return {
        width : Number(width),
        height: Number(height),
        color: Color,
        calcArea:()=>{
            return height*width;
        }
    }
    
}
